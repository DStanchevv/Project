@using SportWave.ViewModels.AdminViewModels
@model AddNewPromoCodeViewModel

@{
    ViewBag.Title = "Add Promo Code";
}

<h2 class="text-center textColor">@ViewBag.Title</h2>
<hr class="hrStyle" />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 textColor">
        <form asp-action="AddPromoCode" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Code" class="form-label">Code</label>
                <input asp-for="@Model.Code" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Code" class="textColor"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Value" class="form-label">Value in %</label>
                <input asp-for="@Model.Value" class="form-control" aria-required="true" type="number" min="1" max="100"/>
                <span asp-validation-for="@Model.Value" class="textColor"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-danger buttonColor" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>