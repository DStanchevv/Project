@using SportWave.ViewModels.StaffViewModels
@model IEnumerable<AddStoreViewModel>

@{
    ViewData["Title"] = "Stores";
}

<h1 class="text-center textColor">@ViewBag.Title</h1>
<p class="text-center textColor">Here you can manage the stores</p>

<hr class="hrStyle" />


@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var store in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <h6>Country: <b>@store.Country</b></h6>
                        <h6>Region: <b>@store.Region</b></h6>
                        <h6>City: <b>@store.City</b></h6>
                        <h6>Location: <b>@store.Location</b></h6>
                    </div>
                    <a class="w-100 btn btn-lg btn-danger buttonColor" asp-area="" asp-controller="Staff" asp-action="RemoveStore" asp-route-id="@store.Id">
                        <i class="fa-solid fa-trash-can fa-lg"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 class="textColor">No available stores!</h2>
}


