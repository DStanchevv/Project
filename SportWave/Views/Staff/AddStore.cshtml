@using SportWave.ViewModels.StaffViewModels
@model AddStoreViewModel

@{
    ViewBag.Title = "Add Store";
}

<h2 class="text-center textColor">@ViewBag.Title</h2>
<hr class="hrStyle" />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 textColor">
        <form asp-action="AddStore" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Country" class="form-label">Country</label>
                <input asp-for="@Model.Country" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Country" class="textColor"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Region" class="form-label">Region</label>
                <input asp-for="@Model.Region" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Region" class="textColor"></span>
            </div>
             <div class="mb-3">
                <label asp-for="@Model.City" class="form-label">City</label>
                <input asp-for="@Model.City" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.City" class="textColor"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Location" class="form-label">Location</label>
                <input asp-for="@Model.Location" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Location" class="textColor"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-danger buttonColor" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>