@{
    ViewData["Title"] = "Stores";
}

<h1 class="text-center textColor">@ViewBag.Title</h1>
<p class="text-center textColor">Do you allow your location to be used?</p>
<hr class="hrStyle" />

<div class="row justify-content-center">
    <div class="col-md-4 mx-5 my-1">
        <a class="w-100 btn btn-lg btn-danger buttonColor" asp-area="" asp-controller="Store" asp-action="NearestLocation">
            Yes
        </a>
    </div>
    <div class="col-md-4 mx-5 my-1">
        <a class="w-100 btn btn-lg btn-danger buttonColor" asp-area="" asp-controller="Store" asp-action="AllStores">
            No
        </a>
    </div>
</div>

