@using SportWave.ViewModels.MenViewModels
@model AddVariationViewModel
@{
    ViewBag.Title = "Add Variations";
}

<h2 class="text-center textColor">@ViewBag.Title</h2>
<hr class="hrStyle" />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 textColor">
        <form asp-action="AddVariations" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label">Quantity for each size</label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Quantity" class="textColor"></span>
                </div>
            <div class="mb-3">
                <input class="btn btn-primary buttonColor" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>